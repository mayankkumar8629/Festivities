<%layout("/layouts/boilerplate")%>
<div class="container-fluid d-flex" style="height: 100vh">
  <!-- Left Half for Image -->
  <div
    class="col-md-6 p-0"
    style="
      background: url('/images/signup.jpg') no-repeat center center;
      background-size: cover;
      margin-top: 20px; /* Adjust top margin as needed */
      margin-bottom: 20px; /* Adjust bottom margin as needed */
      padding-right: 30px; /* Add right padding */
      margin-left: -70px; /* Shift the div slightly to the left */
    "
  ></div>

  <!-- Right Half for Form -->
  <div class="col-md-6 p-5">
    <!-- Signup Button in Top-Right Corner -->
    <button class="btn btn-primary position-absolute top-0 end-0 m-3">
      Login
    </button>

    <!-- Form Container -->
    <div class="mt-1 margin-left">
      <h2 class="mb-4">Create New Account</h2>
      <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="form-row">
          <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="state" class="form-label">State:</label>
            <input
              type="text"
              id="state"
              name="state"
              class="form-control"
              required
            />
          </div>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email:</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="contact" class="form-label">Contact Number:</label>
          <input
            type="tel"
            id="number"
            name="number"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="username" class="form-label">Username:</label>
          <input
            type="text"
            id="username"
            name="username"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password:</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            required
          />
        </div>
        <button class="btn btn-outline-success">Create New Account</button>
      </form>
    </div>
  </div>
</div>
