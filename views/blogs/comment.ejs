<% layout("/layouts/boilerplate")%>

<div class="container-fluid">
  <div class="row">
    <!-- Left Side: Blogs -->
    <div class="col-md-8 border-end" style="overflow-y: auto; height: 100vh">
      <h1 class="my-4">Latest Blogs</h1>
      <% for(let blog of allBlogs) { %>

      <!-- Blog 1 -->
      <div class="card mb-4">
        <div class="card-body">
          <h3 class="card-title"><%=blog.title%></h3>
          <p class="card-text text-muted">
            <%=blog.description%>
            <a href="/blogs/1">Read More</a>
          </p>
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <span class="me-3"> <i class="fas fa-thumbs-up"></i> Like </span>
              <span
                ><a href="/blog/<%=blog._id%>">
                  <i class="fas fa-comment"></i>
                </a>
                Comment
              </span>
            </div>
            <small class="text-muted">
              Posted by <%= blog.user.name %> on <%= new
              Date(blog.createdAt).toLocaleDateString('en-US', { year:
              'numeric', month: 'long', day: 'numeric' }) %>
            </small>
          </div>
        </div>
      </div>
      <%}%>
    </div>

    <!-- Right Side: Features or Sidebar -->
    <div class="col-md-4">
      <div class="container my-5">
        <!-- Form Section -->
        <div class="row mb-4">
          <div class="col-10">
            <form action="/blog/<%=idBlog._id%>/comment" method="POST">
              <div class="mb-3">
                <input
                  name="comments"
                  placeholder="enter comment"
                  type="comments"
                  class="form-control"
                />
              </div>
              <div class="col-2">
                <button class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>

        <!-- Comments Section -->
        <div id="comments" class="row g-3">
          <!-- Example Comment Card -->
          <div class="col-12">
            <div class="card bg-light border-0 shadow-sm">
              <% idBlog.comments.forEach(comment => { %>
              <div class="card-body">
                <h6 class="card-title text-primary"><%=comment.author%></h6>
                <p class="card-text"><%=comment.content%></p>
              </div>
              <% })%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
